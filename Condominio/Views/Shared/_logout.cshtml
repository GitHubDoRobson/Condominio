@using Microsoft.AspNetCore.Identity
@using Condominio.BLL.Models

@inject SignInManager<Usuario> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Usuarios" asp-action="Logout"  id="formularioLogout">
        <ul>
            <li>
                <a class="nav-link white-text" style="cursor:pointer;" onclick="document.getElementById('formularioLogout').submit();"><i class="material-icons right">logout</i>Sair</a>
                
            </li>
        </ul>
    </form>
}
