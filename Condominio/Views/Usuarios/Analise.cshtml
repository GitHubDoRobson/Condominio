@model string

@{
    Layout = null;
    ViewData["title"] = "Conta Aprovação";
}
<html>
<head>
    <meta name="viewport" content="width-device-width" />

    <environment include="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/site.min.css" rel="stylesheet" />
    </environment>

    <title>Conta em aprovação</title>
</head>
<body class="white-text green darken-2 container" style="position:absolute; top:40%; left:20%">
    <div >
        <h1>Conta em aprovação</h1>
        <h5>Olá @Model! Sua conta está sob análise. Em breve, você poderá acessar o sistema.</h5>

    </div>

</body>
</html>