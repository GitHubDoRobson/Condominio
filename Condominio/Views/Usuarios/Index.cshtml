@model IEnumerable<Condominio.BLL.Models.Usuario>

@using Condominio.BLL.Models

@{
    ViewData["Title"] = "Moradores cadastrados";
}


<div class="tabelas">

    <partial name="_Confirmacoes" />

    <div class="collection with-header">
        <div class="collection-header light-green accent-1">
            <div class="row">
                <div class="col s10">
                    <h6 class="black-text">Moradores cadastrados</h6>
                </div>

                <div class="col s2">
                </div>
            </div>
        </div>

        <div class="collection-item">

            <table class="striped highlight responsive-table">
                <thead>
                    <tr>
                        <th>
                            Nome
                        </th>

                        <th>
                            CPF
                        </th>

                        <th>
                            Email
                        </th>

                        <th>
                            Telefone
                        </th>

                        <th>

                        </th>

                        <th>
                            Status
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CPF)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>

                            @if (item.Status == StatusConta.Analisando)
                            {
                                <td>
                                    <span class="new badge yellow darken-4" data-badge-caption="" id="@item.Id">@Html.DisplayFor(modelItem => item.Status)</span>
                                </td>

                                <td class="@item.Id">
                                    <a class="btn-floating light-green accent-4 btnAprovar tooltip" onclick="AprovarUsuarios('@item.Id', '@item.UserName')" data-position="right" data-tooltip="Aprovar usuário"><i class="material-icons">thumb_up</i></a>
                                    <a class="btn-floating red darken-4 btnReprovar tooltip" onclick="ReprovarUsuarios('@item.Id', '@item.UserName')" data-position="right" data-tooltip="Reprovar usuário"><i class="material-icons">thumb_down</i></a>

                                </td>

                            }
                            else if (item.Status == StatusConta.Aprovado)
                            {
                                <td>
                                    <span class="new badge green darken-4" data-badge-caption="">@Html.DisplayFor(modelItem => item.Status)</span>
                                </td>

                                <td>
                                    <a class="btn-floating green darken-4 tooltip" asp-controller="Usuarios" asp-action="GerenciarUsuario" asp-route-usuarioId="@item.Id" asp-route-nome="@item.UserName" data-position="right" data-tooltip="Gerenciar usuário"><i class="material-icons">group</i></a>
                                </td>

                            }
                            else
                            {
                                <td>
                                    <span class="new badge red darken-4" data-badge-caption="">@Html.DisplayFor(modelItem => item.Status)</span>
                                </td>
                                <td>
                                    <a class="btn-floating red darken-4 tooltip" data-position="right" data-tooltip="Gerenciar usuário"><i class="material-icons">close</i></a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/OperacoesUsuario.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.tooltip').tooltip();
        });
    </script>
}
